<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ibenben.mapper.UserFacilityMapper">
  <resultMap id="BaseResultMap" type="com.ibenben.domain.UserFacilityKey">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <id column="facility_id" jdbcType="INTEGER" property="facilityId" />
  </resultMap>
  
  <select id="getUserFacilityList" resultMap="com.ibenben.mapper.FacilityMapper.BaseResultMap">
  	select
		f.*
	from
		user_facility uf
	inner join user u on uf.user_id = u.user_id
	inner join facility f on uf.facility_id = f.facility_id and f.status='OK'
	where
		u.user_id = #{userId}
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="com.ibenben.domain.UserFacilityKey">
    delete from user_facility
    where user_id = #{userId,jdbcType=INTEGER}
      and facility_id = #{facilityId,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.ibenben.domain.UserFacilityKey">
    insert into user_facility (user_id, facility_id)
    values (#{userId,jdbcType=INTEGER}, #{facilityId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.ibenben.domain.UserFacilityKey">
    insert into user_facility
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        user_id,
      </if>
      <if test="facilityId != null">
        facility_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="facilityId != null">
        #{facilityId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
</mapper>